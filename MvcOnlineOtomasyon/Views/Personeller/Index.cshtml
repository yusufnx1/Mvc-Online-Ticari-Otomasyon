@using MvcOnlineOtomasyon.Models.Sınıflar
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<div class="container">
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Personel Adı</th>
            <th>Personel Soyad</th>
            <th>Departman</th>
            <th>Güncelle</th>
            <th>Satışlar</th>
        </tr>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PersonelId</td>
                <td>@p.PersonelAd</td>
                <td>@p.PersonelSoyad</td>
                <td>@p.Departman.DepartmanAd</td>
                <td><a href="/Personeller/PersonelGetir/@p.PersonelId" class="btn btn-outline-warning">GÜNCELLE</a></td>
                <td><a href="/Departmanlar/DepPersonelSatis/@p.PersonelId" class="btn btn-outline-dark">SATIŞLAR</a></td>
            </tr>
        }
    </table>
    <a href="/Personeller/YeniPersonel" class="btn btn-info">Personel Ekle</a>
</div>

