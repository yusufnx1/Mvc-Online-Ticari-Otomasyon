@model MvcOnlineOtomasyon.Models.Sınıflar.Cariler
@{
    ViewBag.Title = "YeniCari";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<div class="container">
    <form method="post" class="form-group">
        @Html.Label("Ad")
        @Html.TextBoxFor(x => x.CariAd, new { @class = "form-control" })
        <br />
        @Html.Label("Soyad")
        @Html.TextBoxFor(x => x.CariSoyad, new { @class = "form-control" })
        <br/>
        @Html.Label("Şehir")
        @Html.TextBoxFor(x => x.CariSehir, new { @class = "form-control" })
        <br/>
        @Html.Label("Mail")
        @Html.TextBoxFor(x => x.CariMail, new { @class = "form-control" })
        <br/>
        <button class="btn btn-primary">Cari Ekle</button>
    </form>
</div>
