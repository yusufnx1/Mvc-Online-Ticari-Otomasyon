@using MvcOnlineOtomasyon.Models.Sınıflar
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}


<div class="container">
    <br />
    @using (Html.BeginForm("Index", "Kargo", FormMethod.Get))
    {
        <p>
            Takip Kodu: @Html.TextBox("p")
            <input type="submit" value="Ara" />
        </p>
    }
    <table class="table table-hover">
        <tr>
            <th>Personel</th>
            <th>Alıcı</th>
            <th>Tarih</th>
            <th>Takip Kodu</th>
            <th>Detaylar</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Personel</td>
                <td>@x.Alici</td>
                <td>@x.Tarih.ToString("dd-MM-yyyy")</td>
                <td>@x.TakipKodu</td>
                <td><a href="/Kargo/KargoDetay/@x.KargoDetayId" class="btn btn-outline-danger">Detay</a></td>
            </tr>
        }
    </table>
    <a href="/Kargo/YeniKargo" class="btn btn-outline-info">Yeni Kargo Giriş</a>
</div>