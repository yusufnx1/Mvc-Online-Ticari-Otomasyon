@model IEnumerable<MvcOnlineOtomasyon.Models.Sınıflar.GrupSinif3>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Markalar</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Marka</th>
                    <th>Progress</th>
                    <th style="width: 40px">Toplam</th>
                </tr>
            </thead>
            <tbody>
                @{ int sira = 0;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@{sira++;} @sira.</td>
                        <td>@item.marka</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>
                        </td>
                        <td><span class="badge bg-danger">@item.sayi</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
</div>
