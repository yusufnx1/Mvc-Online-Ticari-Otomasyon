@using MvcOnlineOtomasyon.Models.Sınıflar
@model List<Kategori>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Kategori Tablosu</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th style="width: 10px">#</th>
                    <th>Kategori Ad</th>
                    <th>Progress</th>
                </tr>
            </thead>
            <tbody>
                @{ 
                    int sirano = 0;
                }
                @foreach (var x in Model)
                {
                    <tr>
                        <td>@{sirano++;} @sirano.</td>
                        <td>@x.KategoriAd</td>
                        <td>
                            <div class="progress progress-xs">
                                <div class="progress-bar progress-bar-danger" style="width: 55%"></div>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>