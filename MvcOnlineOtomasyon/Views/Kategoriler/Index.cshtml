@using MvcOnlineOtomasyon.Models.Sınıflar
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainView.cshtml";
}

<div class="container">
    <table class="table table-bordered" style="margin-top:20px;">
        <tr>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var k in Model)
        {
            <tr>
                <td>@k.KategoriAd</td>
                <td><a href="/Kategoriler/KategoriSil/@k.KategoriId" class="btn btn-danger">SİL</a></td>
                <td><a href="/Kategoriler/KategoriGetir/@k.KategoriId" class="btn btn-success">GÜNCELLE</a></td>
            </tr>
        }
    </table>
    @Html.PagedListPager((IPagedList)Model, sayfa => Url.Action("Index", new { sayfa}))
    <a href="/Kategoriler/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>
</div>



